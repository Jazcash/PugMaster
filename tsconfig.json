        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2019",
        "lib": [
            "es2019",
            "DOM"
        ],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist"
    },
    "files": [
        "app.ts"
    ],
    "include": [
        "./commands/**/*",
        "./core/**/*",
        "./models/**/*"
    ],
    "exclude": [
        ""
    ]
}